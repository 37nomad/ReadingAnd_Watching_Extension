{
  "manifest_version": 3,
  "name": "Browsing & Video Tracker",
  "version": "1.0",
  "description": "Track visited websites and watched videos locally.",
  "permissions": [
    "tabs",
    "history",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
